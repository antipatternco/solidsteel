<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th><%= casein_sort_link "Name", :tag %></th>
            <th></th>
        </tr>
    </thead>
    
    <% ActsAsTaggableOn::Tag.all.order('name ASC').each do |tag| %>
        <tr>
            <td><%= tag %></td>
            <td class="delete">
                <%= link_to(casein_show_row_icon("trash"), casein_tag_path(tag), :method => :delete, :data => { :confirm => "Are you sure you want to delete this tag?" }) %>
            </td>
        </tr>
    <% end %>
</table>