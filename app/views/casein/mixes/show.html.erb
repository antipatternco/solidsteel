<!-- Scaffolding generated by Casein v5.1.1.5 -->

<h2>Mix: <%= @mix.name %></h2>
<p>(part <%= @mix.part %> of broadcast: <%= @mix.broadcast.session_name %>)</p>

<%= form_for @mix, :url => casein_mix_path(@mix) do |f| %>

	<%= render :partial => 'casein/mixes/form', :locals => { :f => f } %>
	
	<p class="submits">
	  	<%= link_to 'Cancel', casein_mixes_path, :class => 'btn btn-mini btn-danger' %>
		<%= f.submit "Save changes", :class => "btn btn-mini btn-primary" %>
	</p>

<% end %>

<%= content_for :sidebar do %>
	<li><%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_mixes_path %></li>
<% end %>