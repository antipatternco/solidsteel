<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Artist", :artist %></th>
			<th><%= casein_sort_link "Record label", :record_label %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% tracks.each do |track| %>
		<tr>
			<td><%= casein_table_cell_link track.title, casein_track_path(track) %></td>
			<td><%= casein_table_cell_link track.artist, casein_track_path(track) %></td>
			<td><%= casein_table_cell_link track.record_label, casein_track_path(track) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_track_path(track), :method => :delete, :data => { :confirm => "Are you sure you want to delete this track?" }) %>
			</td>
		</tr>
	<% end %>
</table>