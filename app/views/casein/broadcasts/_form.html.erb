<div class="row">
	<div class="col-lg-6">
		<%= casein_text_field f, f.object, :session_name %>
	</div>
	<div class="col-lg-6">
		<%= casein_date_select f, f.object, :broadcast_date %>
	</div>
	<div class="col-lg-12">
		<%= casein_text_area f, f.object, :notes %>
	</div>
	<div class="col-lg-12">
		<%= casein_text_area f, f.object, :altnotes %>
	</div>

	<div class="col-lg-6">
		<%= casein_file_field f, f.object, "broadcast", :image , { :casein_label => "Broadcast image (one only)"}%>
		<%= if @broadcast.image? then image_tag(@broadcast.image, width: '300') else content_tag(:span, "No image yet") end %>
	</div>
</div>
