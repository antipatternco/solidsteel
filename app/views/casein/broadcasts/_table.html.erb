<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Session name", :session_name %></th>
			<th><%= casein_sort_link "Broadcast date", :broadcast_date %></th>
			<th>part 1</th>
			<th>part 2</th>
			<th>part 3</th>
			<th>part 4</th>
			<th>Notes</th>
			<th>highlight</th>
			<th>featured</th>
			<th>djs</th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% broadcasts.each do |broadcast| %>
		<tr>
			<td><%= casein_table_cell_link broadcast.session_name, casein_broadcast_path(broadcast) %></td>
			<td><%= casein_table_cell_link broadcast.broadcast_date.strftime("%d %^b %Y"), casein_broadcast_path(broadcast) %></td>
			
			<td><% if broadcast.mixes[0]%><%= broadcast.mixes[0].name %><% end %></td>
			<td><% if broadcast.mixes[1]%><%= broadcast.mixes[1].name %><% end %></td>
			<td><% if broadcast.mixes[2]%><%= broadcast.mixes[2].name %><% end %></td>
			<td><% if broadcast.mixes[3]%><%= broadcast.mixes[3].name %><% end %></td>

			<td><%= casein_table_cell_link broadcast.notes, casein_broadcast_path(broadcast) %></td>

			<td><% if broadcast.highlight %>yes<% end %></td>
			<td><% if broadcast.featured  %>yes<% end %></td>

			<td><% broadcast.tags.each do |t| %><%= t %><br /><% end %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_broadcast_path(broadcast), :method => :delete, :data => { :confirm => "Are you sure you want to delete this broadcast?" }) %>
			</td>
		</tr>
	<% end %>
</table>